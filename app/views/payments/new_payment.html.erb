<div class="d-flex flex-column align-items-center p-2">
    <h1>New Transaction</h1>
    <div id="<%= @category.icon %>" class="img_icon"></div>
    <%= form_with model: @payment, url: payment_create_new_post_path, method: :post, class: "d-flex flex-column align-items-center" do |form| %>

    <div class="form-group">
        <%= form.label :category %>
        <%= form.text_field :category, value: @category.name, disabled: true, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :amount %>
        <%= form.number_field :amount, step: 0.1, class: "form-control" %>
    </div>

    <div>
        <%= form.submit "Save", class: "btn btn-secondary mt-3" %>
    </div>

    <% end %>

</div>
